@model IEnumerable<WhereToEat.MVC.Models.Connections.ConnectionViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="ConnectionRequestsIndex">New Requests</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ConnectedUser)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ConnectedUser.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ConnectionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ConnectionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ConnectionId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>