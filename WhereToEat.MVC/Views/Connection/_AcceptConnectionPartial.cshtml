@model WhereToEat.MVC.Data.Connection
@{
    ViewBag.Title = "title";
}

<div class="col-md-2">
    <form asp-action="AcceptConnection">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ConnectionId" />
        <input type="hidden" asp-for="SenderId" />
        <input type="hidden" asp-for="ReceiverId" />
        <input type="hidden" asp-for="IsAccepted" />
        <div class="form-group">
            <input type="submit" value="Accept" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}