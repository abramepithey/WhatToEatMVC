@using WhereToEat.MVC.Models.Cuisines
@model IEnumerable<WhereToEat.MVC.Models.Cuisines.CuisineViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.CuisineId">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.CuisineId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
